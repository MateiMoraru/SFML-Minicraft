#include "chunk.h"

class Environment
{
    private:
        std::vector<Chunk> worldChunks;

    public:
        Environment()
        {
            generateWorldChunks();   
        }

        void generateWorldChunks()
        {
            for(int i = 0; i < WIDTH; i += 16 * SPRITE_SIZE)
            {   
                for(int j = 0; j < HEIGHT; j += 16 * SPRITE_SIZE)
                {
                    Chunk currentChunk = Chunk();
                    
                    for(int x = i; x < i + Chunk.SIZE * SPRITE_SIZE; i += SPRITE_SIZE)
                    {
                        for(int y = j; y < j + Chunk.SIZE * SPRITE_SIZE; j += SPRITE_SIZE)
                        {
                            currentChunk.addBlock(Block(sf::Vector2f(x, y), sf::Vector2f(SPRITE_SIZE, SPRITE_SIZE));
                        }
                    }

                    worldChunks.push_back(currentChunk);
                }
            }            
        }

        void draw(sf::RenderWindow &window)
        {
            for(int i = 0; i < worldChunks.size(); i++)
            {
                worldChunks[i].draw(window);   
            }
        }
};
